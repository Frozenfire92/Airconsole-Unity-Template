<div class="list-select {{unless @show "out-of-view"}}">
  <h3>Select one:</h3>
  <ul>
    {{#each @data as |item index|}}
      <li
        class={{if (eq index this.selectedIndex) "selected"}}
        {{on "touchstart" (fn this.select index)}}
      >
        {{item}}
      </li>
    {{/each}}
  </ul>
  <button
    disabled={{this.disabled}}
    {{on "touchstart" this.submit}}
  >
    Submit
  </button>
</div>